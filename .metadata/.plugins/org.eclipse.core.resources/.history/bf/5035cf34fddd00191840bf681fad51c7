	public void saveCustomer(Employee theCustomer) {
	
		

	}

	@Override
	public Employee getCustomer(int theId) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void deleteCustomer(int theId) {
		// TODO Auto-generated method stub

	}

}
